            "required": [
                "Unified"
            ],
            "properties": {
                "Unified": {
                    "$ref": "#/components/schemas/Bid"
                }
            },
            "additionalProperties": false
        },
        {
            "description": "A bid record containing only validator data.",
            "type": "object",
            "required": [
                "Validator"
            ],
            "properties": {
                "Validator": {
                    "$ref": "#/components/schemas/ValidatorBid"
                }
            },
            "additionalProperties": false
        },
        {
            "description": "A bid record containing only delegator data.",
            "type": "object",
            "required": [
                "Delegator"
